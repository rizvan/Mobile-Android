<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


<color  name="app_background">#000000</color> <!-- black -->
<color  name="app_textcolor">#FFFFFF</color> <!-- white -->

<color  name="default_background">#FFFFFF</color> <!-- black -->
<color  name="default_textcolor">#000000</color> <!-- white -->

<color  name="tabhost_textcolor">#000000</color>  <!-- black  -->
<color  name="tabhost_background">#500000</color><!-- white -->

<color  name="tab_textcolor">#FFFFFF</color>  <!-- white -->
<color  name="tab_background">#989898</color><!-- gray -->
<color  name="tab_shadowcolor">#989898</color> <!-- gray -->

<color  name="tabview_background">#FFFFFF</color> <!-- white -->
<color  name="listview_background">#500000</color> <!-- dark red -->
<color  name="gridview_background">#FFFFFF</color> <!-- dark red -->

<color  name="textview_document_position_background">#FFFFFF</color> <!-- white-->
<color  name="textview_document_position_textcolor">#000000</color> <!-- black-->
<color  name="textview_document_title_background">#FFFFFF</color> <!-- white-->
<color  name="textview_document_title_textcolor">#500000</color> <!-- dark red-->

<color  name="textview_document_authors_textcolor">#000000</color> <!-- black-->
<color  name="textview_document_authors_background">#FFFFFF</color> <!-- white-->

<color  name="textview_document_collection_textcolor">#000000</color> <!-- black-->
<color  name="textview_document_collection_background">#FFFFFF</color> <!-- white-->

<color  name="textview_document_abstract_textcolor">#000000</color> <!-- black-->
<color  name="textview_document_abstract_background">#FFFFFF</color> <!-- white-->

<color  name="page_background">#FFFFFF</color> <!-- white-->
<color  name="page_textcolor">#000000</color> <!-- black-->
<color  name="pagelist_background">#FFFFFF</color> <!-- 000FFF-->
<color  name="pagelist_textcolor">#000000</color> <!-- FFF000-->

<color  name="details_background">#FFFFFF</color> <!-- white-->
<color  name="details_textcolor">#000000</color> <!-- black-->

<color  name="detail_textview_document_position_background">#FFFFFF</color> <!-- white-->
<color  name="detail_textview_document_position_textcolor">#000000</color> <!-- black-->
<color  name="detail_textview_document_title_background">#FFFFFF</color> <!-- white-->
<color  name="detail_textview_document_title_textcolor">#500000</color> <!-- dark red-->

<color  name="detail_textview_document_authors_textcolor">#000000</color> <!-- black-->
<color  name="detail_textview_document_authors_background">#FFFFFF</color> <!-- white-->

<color  name="detail_textview_document_collection_textcolor">#000000</color> <!-- black-->
<color  name="detail_textview_document_collection_background">#FFFFFF</color> <!-- white-->

<color  name="detail_textview_document_abstract_textcolor">#000000</color> <!-- black-->
<color  name="detail_textview_document_abstract_background">#FFFFFF</color> <!-- white-->

<style name="banner">
	<item name="android:gravity">center</item>
	<item name="android:background">@drawable/scielo</item>
</style>

<style name="MyTabHost" parent="android:Theme.Light">
<item name="android:background">@color/default_background</item>
<item name="android:textColor">@color/default_textcolor</item>
</style>
<style name="MyTabHostLinearLayout" parent="MyTabHost">
<item name="android:textColor">@color/tabhost_textcolor</item>
<item name="android:background">@color/tabhost_background</item>
<item name="android:padding">20sp</item>
</style>


<style name="MyTabWidget" parent="@android:style/Widget.TabWidget">
<item name="android:background">@color/tab_background</item>
<item name="android:textColor">@color/tab_textcolor</item>
<item name="android:padding">10sp</item>
<item name="android:ellipsize">marquee</item>
<item name="android:gravity">top</item>
 <item name="android:singleLine">true</item>
</style>

<style name="MyTabView" parent="@android:style/Widget.ListView">
<item name="android:background">@color/tabview_background</item>
<item name="android:tabStripEnabled">false</item>

</style>
<style name="MyListView" parent="@android:style/Widget.ListView">
<item name="android:background">@color/listview_background</item>
<item name="android:textSize">15sp</item>

</style>
<style name="MyGridView" parent="@android:style/Widget.GridView">
<item name="android:background">@color/gridview_background</item>
<item name="android:gravity">left</item>
<item name="android:numColumns">10</item>

</style>
<style name="textview_document_position" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">13sp</item>
<item name="android:background">@color/textview_document_position_background</item>
<item name="android:textColor">@color/textview_document_position_textcolor</item>
</style>
<style name="textview_document_title" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">17sp</item>
<item name="android:background">@color/textview_document_title_background</item>
<item name="android:textColor">@color/textview_document_title_textcolor</item>
</style>
<style name="textview_document_authors" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">15sp</item>
<item name="android:background">@color/textview_document_authors_background</item>
<item name="android:textColor">@color/textview_document_authors_textcolor</item>
<item name="android:textStyle">italic</item>
</style>

<style name="detail_textview_document_position" parent="MyListView">
<item name="android:gravity">right</item>
<item name="android:textSize">10sp</item>
<item name="android:background">@color/detail_textview_document_position_background</item> 
<item name="android:textColor">@color/detail_textview_document_position_textcolor</item>
<item name="android:padding">10sp</item>
</style>
<style name="detail_textview_document_title" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">20sp</item>
<item name="android:background">@color/detail_textview_document_title_background</item>
<item name="android:textColor">@color/detail_textview_document_title_textcolor</item>
<item name="android:padding">10sp</item>
</style>
<style name="detail_textview_document_authors" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">15sp</item>
<item name="android:background">@color/detail_textview_document_authors_background</item>
<item name="android:textColor">@color/detail_textview_document_authors_textcolor</item>
<item name="android:textStyle">italic</item>
<item name="android:padding">10sp</item>
</style>
<style name="detail_textview_document_collection" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">15sp</item>
<item name="android:background">@color/detail_textview_document_collection_background</item>
<item name="android:textColor">@color/detail_textview_document_collection_textcolor</item>
<item name="android:padding">10sp</item>
</style>
<style name="detail_textview_document_abstract" parent="MyListView">
<item name="android:gravity">left</item>
<item name="android:textSize">15sp</item>
<item name="android:background">@color/detail_textview_document_abstract_background</item>
<item name="android:textColor">@color/detail_textview_document_abstract_textcolor</item>
<item name="android:padding">10sp</item>
</style>
<style name="detail_textview_document_pdf">
	<item name="android:gravity">left</item>
	<item name="android:background">#FFFFFF</item>
	<item name="android:textColor">#585858</item>	
	<item name="android:autoLink">all</item>	
	<item name="android:drawableLeft">@drawable/acroread</item>
</style>
<style name="page">
	<item name="android:textColor">@color/page_textcolor</item>
	<item name="android:background">@color/page_background</item>
	<item name="android:textSize">10sp</item>	
	<item name="android:gravity">left</item>	
		
</style>
<style name="pagelist">
	<item name="android:textColor">@color/pagelist_textcolor</item>
	<item name="android:background">@color/pagelist_background</item>
</style>
<style name="detail">
	<item name="android:textColor">@color/details_textcolor</item>
	<item name="android:background">@color/details_background</item>
</style>


<style name="MyMenu" parent="android:Theme.Light">
<item name="android:background">#FFFF00</item>
<item name="android:textColor">#FF00FF</item>
<item name="android:textSize">5sp</item>
</style>

</resources>
