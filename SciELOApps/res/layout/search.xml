<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="@style/MyTabView"
    >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    
	    > 	
	    <TextView 
				android:id="@+id/banner" 
				android:layout_height="wrap_content"
				style="@style/banner" android:layout_width="wrap_content"/>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
	    
		    > 	
			<TextView 
					android:id="@+id/call_search" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/call_search" 	
					style="@style/mainOption" 	
					
			/>	
			<TextView 
					android:id="@+id/call_naveg" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/call_naveg"
					style="@style/mainOption" 
							
			/>
		</LinearLayout>
    </LinearLayout>
    
    	<TextView 
	    android:id="@+id/TextViewHeader"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/textview_header"
	    android:text="teste"
	/> 
	<GridView   
       android:id="@+id/paginationListView" 
       android:orientation="horizontal" 
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       style="@style/PaginationView"
       >
       
       </GridView>
 	<ListView 
       	android:id="@+id/list" 
       	android:orientation="horizontal" 
       	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
       >
       
       </ListView>
</LinearLayout>
