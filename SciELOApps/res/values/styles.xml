<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  	<style name="MyTabHost" parent="android:Theme.Light">
  		<item name="android:textColor">#000000</item> 
  	</style>
	<style name="MyTabHostLinearLayout" parent="MyTabHost">
  		<item name="android:textColor">#000000</item> 
  		<item name="android:background">#FFFFFF</item> 
  	</style> 
  
	<style name="MyTabWidget" parent="@android:style/Widget.TabWidget">
  		<item name="android:textColor">#FFFFFF</item> 
		<item name="android:ellipsize">marquee</item> 
		<item name="android:gravity">top</item> 
		<item name="android:singleLine">true</item>  
	</style>
  	<style name="MyTabView" parent="@android:style/Widget.ListView">
  		<item name="android:tabStripEnabled">true</item> 
  		<item name="android:background">#FFFFFF</item>
  	</style>
	<style name="textview_document_position" parent="TextView">
		<item name="android:textSize">13sp</item>
	</style>
	<style name="textview_document_title">		
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#500000</item>
		<item name="android:background">#FFFFFF</item>		
	</style>
	<style name="textview_highlight" >		
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#500000</item>
		<item name="android:background">#FFFFFF</item>
	</style>
	<style name="textview_document_authors" parent="TextView">
		<item name="android:textStyle">italic</item>
	</style>
		
	<style name="textview_collection" parent="TextView">
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">italic</item>
	</style>
	<style name="textview_document_abstract" parent="TextView">
	</style>
	<style name="textview_header"  parent="TextView">
		<item name="android:textSize">10sp</item>
	</style>
	
	<style name="textview_subject"  parent="TextView">
		<item name="android:textSize">10sp</item>
	</style>
	<style name="textview_issue"  parent="TextView">
		<item name="android:textSize">13sp</item>
	</style>
	<style name="textview_journal"  parent="TextView">
	</style>	
	<style name="document_page" parent="TextView">
	</style>
	<style name="page" parent="TextView">
		<item name="android:textSize">10sp</item>
		<item name="android:padding">5sp</item>  	
	</style>
	<style name="pagelist" parent="TextView">
	</style>
	
	<style name="MyGridView" parent="android:style/Widget.GridView">
		<item name="android:numColumns">8</item>
		<item name="android:gravity">center</item>
				
	</style>
	<style name="MyListView" parent="@android:style/Widget.ListView">
		<item name="android:background">#989898</item>
		
	</style>
</resources>
